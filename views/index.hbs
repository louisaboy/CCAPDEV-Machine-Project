{{> header}}

{{#each cartoons}}
    {{#if @first}} <!-- 1 -->
        <div id="featured-image" style='background-image: url({{photo}})'>
            <div id="featured-content">
                <h1>{{name}}</h1>

                <span >{{this.year}} | {{this.genre}} | </span>
                <span class="{{this.star1}}"></span>
                <span class="{{star2}}"></span>
                <span class="{{star3}}"></span>
                <span class="{{star4}}"></span>
                <span class="{{star5}}"></span>

                <p>{{synopsis}}</p>

                <div id="featured-buttons">
                    <span id="add-list"><i class="fa fa-plus fa-2x"></i></span>
                    <div id="list-menu" class="drop-down-menu">
                        <ul>
                            <li>Watching</li>
                            <li>On Hold</li>
                            <li>Dropped</li>
                            <li>Plan to Watch</li>
                        </ul>
                    </div>
                    <a href="{{file}}">
                        <button class="medium-button">MORE INFO</button>
                    </a>
                </div>
            </div>
        </div>
    {{/if}}
{{/each}}

